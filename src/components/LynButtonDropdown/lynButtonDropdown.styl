.lyn-button-dropdown-single-container
    position relative
    width fit-content
    z-index 10
    > .lyn-button
        white-space nowrap

    .button-dropdown
        width fit-content
        min-width 100%

    &.icon-only > .lyn-button
        padding initial
        height 2.625rem
        width 2.625rem

    &.icon-only
        .button-dropdown
            width auto

.lyn-button-dropdown-split-container
    position relative
    display grid
    grid-template-columns 1fr
    width fit-content
    cursor pointer
    border-radius 0.5rem
    min-height 2.625rem
    box-sizing border-box
    @extend .lyn-button-font

    &.hide
        opacity 0
        .button-dropdown-split-left
            transition none
    
    &.active
        .button-dropdown-split-left
            &.active-top
                border-radius 0 0 0 0.5rem
                border-top-color solid 0.125rem transparent

            &.active-bottom
                border-radius 0.5rem 0 0 0
                border-bottom-color solid 0.125rem transparent

    .button-dropdown-split-left
        grid-column 1 / 2
        z-index 1
        @extend .lyn-button
        border-radius 0.5rem 0 0 0.5rem
        lyn-transition-ease()
        padding 0.75rem 1.5rem
        border none
        white-space nowrap
        width 100%
        height 2.625rem
        box-sizing border-box
        
        &.secondary
            background $lyn-white
            color $lyn-primary-blue
            border solid 0.125rem $lyn-primary-blue
            border-right none 

            &:hover
                background $lyn-grey050

            &:active
                background $lyn-grey100

            span::before
                color $lyn-primary-blue
            
        &.primary
            background $lyn-primary-blue
            color $lyn-white
            &:hover
                background $lyn-blue400

            &:active
                background $lyn-blue600

            span::before
                color $lyn-white

        &.active-top
            &:after
                top 0

        &.active-bottom
            &:after
                bottom 0


        &:after
            content ""
            background $lyn-grey200
            position absolute
            left 0
            right 2rem
            background transparent
            lyn-transition-ease()

    .button-dropdown-split-right
        position relative
        @extend .lyn-button
        grid-column 2 / 2
        z-index 2
        padding 0.5rem
        height 2.625rem
        width 2rem
        border-radius 0 0.5rem 0.5rem 0
        border none
        &:after
            content: ''
            position absolute
            left -0.125rem
            top 0
            bottom 0
            width 0.125rem
            background $lyn-grey050

        &.primary
            .button-dropdown-icon
                span::before
                    color $lyn-white

        &.secondary
            border solid 0.125rem $lyn-primary-blue
            border-left none
            .button-dropdown-icon
                span::before
                    color $lyn-primary-blue

            &:after
                background $lyn-primary-blue

        .button-dropdown-icon
            display flex
            align-items center
            lyn-transition-ease(transform)
            &.active
                transform rotate(180deg)

    .button-dropdown
        border-radius 0.5rem 0.5rem 0 0
        min-width calc(100% - 2.125rem)
        width fit-content
        gap 0.25rem
        .lyn-button
            height 2.625rem !important
            min-height 2.625rem !important

            span::before
                color $lyn-grey400 !important

            &:hover
                span::before
                    color $lyn-primary-blue !important

        &.active-bottom-right
            left 0
            top 0

        &.active-bottom-left
            right 0
            top 0

        &.active-top-right
            left 0

        &.active-top-left
            right 0
            bottom 0

        &.active-top
            left 0
            right 2rem
            border-radius 0.5rem 0.5rem 0 0

        &.active-bottom
            right 2rem
            left 0
            top 100%
            border-radius 0 0 0.5rem 0.5rem

.button-dropdown
    visibility hidden
    position absolute
    box-sizing border-box
    max-height 0
    width 100%
    overflow hidden
    display flex
    flex-direction column
    padding 0 0.25rem
    background $lyn-white
    color $lyn-primary-black
    border-radius 0.5rem
    gap 0.25rem
    lyn-shadow-small()
    lyn-transition-ease()

    &.active
        visibility visible
        padding 0.25rem
        max-height 15rem

    &.active-bottom-right
        left 0
        top 2.875rem

    &.active-bottom-left
        right 0
        top 2.875rem

    &.active-top-right
        left 0
        bottom 3.25rem
        top initial !important

    &.active-top-left
        right 0
        bottom 3.25rem
        top initial !important

    &.active-top
        right 0

    &.active-bottom
        right 0

    .lyn-button
        padding 0.75rem 1.5rem !important
        border-radius 0.25rem !important
        height 2.625rem !important
        min-height 2.625rem !important
        width 100%
        display flex
        justify-content start
        white-space nowrap
        text-align left
