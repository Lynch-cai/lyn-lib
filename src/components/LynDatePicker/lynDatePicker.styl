.lyn-datepicker-container
    height fit-content
    gap 0.25rem
    display flex
    flex-direction column
    &.disabled
        .el-input
            .el-input__wrapper
                pointer-events none
                background $lyn-grey050
                border 0.125rem solid $lyn-grey200

    &.has-error
        .el-input
            .el-input__wrapper
                border 0.125rem solid $lyn-alert300 !important
                &:hover
                    border-color $lyn-alert300 !important
                &:active, &:focus-within
                    border-color $lyn-alert300 !important

    .el-input
        width 100%
        height 2.625rem
        .el-input__wrapper
            min-width inherit
            display flex
            align-items center
            gap 0
            border-radius 0.5rem
            border solid 0.125rem $lyn-grey200
            height 2.625rem
            justify-content space-between
            box-sizing border-box
            padding 0
            box-shadow none
            transition all ease 0.2s !important
            &:hover
                border-color $lyn-grey300
                lyn-shadow-extra-small()
            &:active, &:focus-within
                border-color $lyn-primary-blue !important
                lyn-shadow-extra-small()
            .el-input__inner
                height 100%
                padding 0.75rem 1rem
                color $lyn-grey400
                width 100%
                border none
                background transparent
                height 42px !important
                box-sizing border-box
                outline none !important
                @extend .lyn-body-font

        .el-input__prefix-inner
            display none !important

        .el-input__suffix-inner
            display none !important

        
.el-popper
    lyn-shadow-small()
    border 0.125rem solid $lyn-grey200 !important
    border-radius 0.5rem !important

    td
        &.current
            .el-date-table-cell
                .el-date-table-cell__text
                    background $lyn-primary-blue !important
                    color $lyn-white !important

        &.today
            .el-date-table-cell
                .el-date-table-cell__text
                    color $lyn-primary-blue

    .el-date-table__row
        .today
            .el-date-table-cell
                &:active
                    .el-date-table-cell__text
                        color $lyn-white

    .el-date-table-cell
        color $lyn-primary-black
        @extend .lyn-body2-font
        &:hover
            .el-date-table-cell__text
                background $lyn-blue100 !important
                color $lyn-primary-blue
        &:active
            .el-date-table-cell__text
                background $lyn-primary-blue !important
                color $lyn-white

        .el-date-table-cell__text
            lyn-transition-fast-ease()
            border-radius 0.25rem !important
            line-height 1.5625rem
            color $lyn-grey400

    .el-date-picker__next-btn, .el-date-picker__prev-btn
        display flex


    .d-arrow-left, .arrow-left, .d-arrow-right, .arrow-right
        i.el-icon
            display none

