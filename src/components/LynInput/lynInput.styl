    //         left 1rem
    //         top 50%
    //         transform translateY(-50%)
    //         path
    //             color $lyn-grey300
        
    //     padding-left 2.5rem

    &.lyn-grey
        background $lyn-grey100
        &:hover, &:focus
            background $lyn-grey200
            border-color $lyn-grey300

    &.small
        height 2.125rem
        padding 0.5rem
        @extend .lyn-body2-font