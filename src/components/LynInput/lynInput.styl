.lyn-input
    color $lyn-grey400
    display flex
    box-sizing border-box
    padding 0.75rem 1rem
    width 100%
    height 2.625rem
    background $lyn-white
    border-radius 0.5rem
    border 0.125rem solid $lyn-grey200
    @extend .lyn-body-font
    lyn-transition-ease()
    &::placeholder
        color $lyn-grey300
    &:hover
        border 0.125rem solid $lyn-grey300
        lyn-shadow-small()
    &:focus
        border 0.125rem solid $lyn-primary-blue
        outline none
        lyn-shadow-small-blue()

    &:disabled
        background $lyn-grey050
        border 0.125rem solid $lyn-grey200
    &.has-error
        border 0.125rem solid $lyn-alert300

    // &.search
    //     svg
