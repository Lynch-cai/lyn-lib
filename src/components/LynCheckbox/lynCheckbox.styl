
.lyn-checkbox-container
    display flex
    align-items center
    width fit-content
    gap 0.25rem
    @extend .lyn-body2-font

    .checkbox-text
        transform: translateY(0.0625rem)
        color $lyn-grey400

    .checkbox
        display flex
        justify-content center
        align-items center
        max-width 1.25rem
        max-height 1.25rem
        span
            position absolute
            pointer-events none
            transition-ease()
            z-index 1
            transform scale(0)
            display flex
            justify-content center
            align-items center
            &:before
                color $lyn-white
        
        label
            position relative
            box-sizing border-box
            display flex
            justify-content center
            align-items center
            width 1.25rem
            height 1.25rem
            pointer-events none
            &:before
                content ''
                position absolute
                border $lyn-grey200 0.125rem solid
                border-radius 0.25rem
                left 0
                right 0
                top 0
                bottom 0
                transition-ease()
            
            &:after
                content ''
                position absolute
                border-radius 0.25rem
                left 0
                right 0
                top 0
                bottom 0
                background $primary-lyn-blue
                transform scale(0)
                transition-ease()

        input
            position absolute
            max-width 1.25rem
            max-height 1.25rem
            opacity 0
            &:checked + label
                &:before
                    border $primary-lyn-blue 0.125rem solid
                &:after
                    transform scale(1)

                span
                    transform scale(1)
            
            &:hover + label
                &:before
                    border $primary-lyn-blue 0.125rem solid
                    lyn-shadow-extra-small()

            &:focus + label
                &:before
                    border $primary-lyn-blue 0.125rem solid
                    lyn-shadow-small-blue()

    &.hasError
        .checkbox
            input + label
                &:before
                    border 0.125rem solid $lyn-alert300