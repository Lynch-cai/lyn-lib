.lyn-link
    display flex
    gap 0.5rem
    align-items start
    position relative
    box-sizing border-box
    width fit-content
    cursor pointer
    text-decoration none
    overflow hidden
    color $lyn-primary-blue
    lyn-transition-ease-expo()
    @extend .lyn-body-font
    &.medium
        @extend .lyn-body-font

    &.bold
        @extend .lyn-button-font

    &.small
        @extend .lyn-body2-font
        &:after
            height 1.5px

        &.bold
            @extend .lyn-subtitle2-font

    &.hasUnderline
        &:after
            transform translateX(0) scaleX(1)

        &:hover, &:focus
            &:after
                transform translateX(-50%) scaleX(0)

    &:after
        content ""
        position absolute
        bottom 0
        left 0
        width 100%
        height 0.125rem
        background $lyn-primary-blue
        transform translateX(-50%) scaleX(0)
        lyn-transition-ease-expo()

    &:hover, &:focus
        outline none
        background-position 0 100%
        &:after
            transform translateX(0) scaleX(1)

    &.active
        background-position 0 100%

    &.lyn-white
        color $lyn-white
        &:after
            background $lyn-white